<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="TestStyle" parent="@android:style/Theme.Dialog">
	    <item name="android:inAnimation">@android:anim/slide_in_left</item>
	    <item name="android:outAnimation">@android:anim/slide_out_right</item>
	    <item name="android:animationDuration">2000</item>
		<item name="android:textColorPrimary">#00DD00</item>
		<item name="android:width">300dp</item>
		<item name="android:editTextStyle">@style/EditTextStyle</item>
		<item name="android:textViewStyle">@style/TextViewStyle</item>
		<item name="android:buttonStyle">@style/ButtonViewStyle</item>
		<item name="android:windowTitleStyle">@style/TitleStyle</item>
		<item name="android:windowBackground">@drawable/wireframe_green</item>
		<item name="android:shadowColor">#00dd00</item>
    	<item name="android:shadowDx">1</item>
    	<item name="android:shadowDy">1</item>
    	<item name="android:paddingLeft">5dp</item>
    	<item name="android:paddingRight">5dp</item>
    	<item name="android:paddingTop">1dp</item>
    	<item name="android:paddingBottom">5dp</item>
		<!-- <item name="@android:windowTitleStyle">@style/TestStyle</item> -->
	</style>
	<style name="WireframeGreenTrans" parent="TestStyle">
	    <item name="android:windowBackground">@drawable/wireframe_green_trans</item>
	</style>
	<style name="WireframeGreenSemiTrans" parent="TestStyle">
	    <item name="android:windowBackground">@drawable/wireframe_green_semitrans</item>
	</style>
 	<style name="TextViewStyle">
 	    <item name="android:gravity">center_horizontal</item>
    	<item name="android:textSize">14dp</item>
    	<item name="android:textColor">#00bb00</item>
    	<item name="android:shadowColor">#000000</item>
    	<item name="android:shadowDx">1</item>
    	<item name="android:shadowDy">1</item>
    	<item name="android:shadowRadius">1.5</item>
    	<item name="android:typeface">monospace</item>
	</style>
	<style name="TitleStyle">
	    <item name="android:shadowColor">#CCBBBB00</item>
	    <item name="android:shadowDx">2</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2.7</item>
	    <item name="android:textSize">18dp</item>
	    <item name="android:height">0dp</item>
	    <item name="android:textColor">#ffff00</item>
	    <item name="android:typeface">monospace</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingBottom">1dp</item>
	</style>
	<style name="ButtonViewStyle">
	    <item name="android:gravity">center_horizontal</item> 
	    <item name="android:background">@drawable/wireframe_green_trans</item>
	    <item name="android:width">100dp</item>
	    <item name="android:textSize">20sp</item>
    	<item name="android:textColor">#00bb00</item>
    	<item name="android:paddingLeft">5dp</item>
    	<item name="android:paddingRight">5dp</item>
    	<item name="android:paddingTop">5dp</item>
    	<item name="android:paddingBottom">5dp</item>
    	<item name="android:textColorHighlight">#0000FF</item>
		<item name="android:drawablePadding">1dp</item>
    	<item name="android:shadowRadius">0</item>
    	<item name="android:typeface">sans</item>   
	</style>
	<style name="EditTextStyle" parent="@android:style/Widget.EditText">
	    <item name="android:background">@drawable/wireframe_green_trans</item>
	</style>
</resources>