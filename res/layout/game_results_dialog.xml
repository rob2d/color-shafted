<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_results_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation = "vertical">
 	<LinearLayout 
 	    android:orientation="vertical"
 	    android:layout_width="450dp"
 	    android:layout_height="wrap_content">
   		<TextView
       		android:id="@+id/gameres_mode_text"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="left"
        	android:gravity="left"
        	android:text="GAME MODE"/>
   		<!-- The Results Box -->
   		<LinearLayout
   		    android:orientation = "vertical"
   		    android:layout_width= "420dp"
   		    android:layout_height="wrap_content"
   		    android:layout_gravity="center_horizontal"
   		    android:background="@drawable/wireframe_green_trans"
   		    android:paddingLeft="20dp"
   		    android:paddingRight="20dp"
   		    android:paddingTop="0dp"
   		    android:paddingBottom="20dp">
   		    <TextView
	       		android:id="@+id/gameres_game_results_txt"
	       		android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_gravity="center"
	        	android:textStyle="bold"
	        	android:textSize="22dp"
	        	android:paddingTop="10dp"
	        	android:paddingBottom="10dp"
	        	android:text="GAME RESULTS"/>
   		    <ScrollView
   		        android:layout_width="fill_parent"
   		        android:layout_height="120dp"
   		        android:focusable="true"
   		        android:focusableInTouchMode="false"
   		        android:scrollbars="vertical"
   		        android:scrollbarThumbVertical="@drawable/wireframe_green_trans">
   		    <LinearLayout
   		        android:layout_width="fill_parent"
   		        android:layout_height="fill_parent"
   		        android:orientation="vertical">
   		    <!-- The Score Row -->
   		    <LinearLayout
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:orientation="horizontal">
   		    <TextView
   		        android:id="@+id/gameres_score_desc"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="left"
   		        android:paddingRight="30dp"
   		        android:gravity="right"
   		        android:text="SCORE:"
   		    />
   		    <TextView
   		        android:id="@+id/gameres_score_value"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="right"
   		        android:paddingRight="50dp"
   		        android:gravity="right"
   		        android:text="100"
   		        />
   		    </LinearLayout>
   		    <!-- End of the Score Row -->
   		    <!-- The Level Row -->
   		    <LinearLayout
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:orientation="horizontal">
   		    <TextView
   		        android:id="@+id/gameres_level_desc"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="left"
   		        android:paddingRight="30dp"
   		        android:gravity="right"
   		        android:text="LEVEL:"
   		    />
   		    <TextView
   		        android:id="@+id/gameres_level_value"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="right"
   		        android:paddingRight="50dp"
   		        android:gravity="right"
   		        android:text="5"
   		        />
   		    </LinearLayout>
   		    <!-- End of the Level Row -->
   		    <!-- The Play Time Row -->
   		    <LinearLayout
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:orientation="horizontal">
   		    <TextView
   		        android:id="@+id/gameres_time_desc"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="left"
   		        android:paddingRight="30dp"
   		        android:gravity="right"
   		        android:text="PLAY TIME:"
   		    />
   		    <TextView
   		        android:id="@+id/gameres_time_value"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="right"
   		        android:paddingRight="50dp"
   		        android:gravity="right"
   		        android:text="1:20"
   		        />
   		    </LinearLayout>
   		    <!-- End of the Play Time Row -->
   		    <!-- The Rank Row -->
   		    <LinearLayout
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:orientation="horizontal">
   		    <TextView
   		        android:id="@+id/gameres_ranking_desc"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="left"
   		        android:paddingRight="30dp"
   		        android:gravity="right"
   		        android:text="RANKING:"
   		    />
   		    <TextView
   		        android:id="@+id/gameres_ranking_value"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="right"
   		        android:paddingRight="50dp"
   		        android:gravity="right"
   		        android:text="20/20"
   		        />
   		    </LinearLayout>
   		    <!-- End of the Rank Row -->
   		    <!-- The Bombs Used Row -->
   		    <LinearLayout
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:orientation="horizontal">
   		    <TextView
   		        android:id="@+id/gameres_maxcombo_desc"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="left"
   		        android:paddingRight="30dp"
   		        android:gravity="right"
   		        android:text="MAX COMBO:"
   		    />
   		    <TextView
   		        android:id="@+id/gameres_maxcombo_value"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="right"
   		        android:paddingRight="50dp"
   		        android:gravity="right"
   		        android:text="67"
   		        />
   		    </LinearLayout>
   		    <!-- End of the Max Combo Row -->
   		    <!-- The Bombs Used Row -->
   		    <LinearLayout
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:orientation="horizontal">
   		    <TextView
   		        android:id="@+id/gameres_bombsused_desc"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="left"
   		        android:paddingRight="30dp"
   		        android:gravity="right"
   		        android:text="BOMBS USED:"
   		    />
   		    <TextView
   		        android:id="@+id/gameres_bombsused_value"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="right"
   		        android:paddingRight="50dp"
   		        android:gravity="right"
   		        android:text="2"
   		        />
   		    </LinearLayout>
   		    <!-- End of the Bombs Used Row -->
   		    <!-- Evasion Percentage Row -->
   		    <LinearLayout
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:orientation="horizontal">
   		    <TextView
   		        android:id="@+id/gameres_evadepercent_desc"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="left"
   		        android:paddingRight="30dp"
   		        android:gravity="right"
   		        android:text="EVASION %:"
   		    />
   		    <TextView
   		        android:id="@+id/gameres_evadepercent_value"
   		        android:layout_width="0dp"
   		        android:layout_height="wrap_content"
   		        android:layout_weight="1"
   		        android:layout_gravity="right"
   		        android:paddingRight="50dp"
   		        android:gravity="right"
   		        android:text="0"
   		        />
   		    </LinearLayout>
   		    <!-- End of the Bombs Used Combo -->
   		    </LinearLayout>
   		</ScrollView>
   		</LinearLayout>
   		<!-- End of the Results Box -->
    </LinearLayout>
   	<!-- The Button Navigation Row -->
    <LinearLayout 
 	   	android:orientation="horizontal"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:gravity="center"
 	    android:layout_gravity="center">
   	    <Button
	   		android:id="@+id/gameres_title_button"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	   		android:layout_gravity="center"
	   		android:focusable="true"
	   		android:focusableInTouchMode="false"
	    	android:text = "Title Screen"/>
   	    <View
    	    android:layout_width="15dp"
    	    android:layout_height="0dp"
    	    android:layout_weight="0"/>
    	<Button
	   		android:id="@+id/gameres_hs_button"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	   		android:layout_gravity="center"
	   		android:focusable="true"
	   		android:focusableInTouchMode="false"
	    	android:text = "High Scores"/>
   	    <View
    	    android:layout_width="15dp"
    	    android:layout_height="0dp"
    	    android:layout_weight="0"/>
    	<Button
	   		android:id="@+id/gameres_again_button"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	   		android:layout_gravity="center"
	   		android:focusable="true"
	   		android:focusableInTouchMode="false"
	    	android:text = "Play Again"/>
   	    <View
    	    android:layout_width="15dp"
    	    android:layout_height="0dp"
    	    android:layout_weight="0"/>
    	<Button
	   		android:id="@+id/gameres_online_button"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	   		android:layout_gravity="center"
	   		android:focusable="true"
	   		android:focusableInTouchMode="false"
	    	android:text = "Submit Online"/>    	
    </LinearLayout>
    <!-- End of The Button Navigation Row -->
</LinearLayout>